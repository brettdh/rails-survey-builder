- if @editing
  - field = f.object
  %input{:type => :checkbox, :name => "field#{field.id}", |
         :value => field.prompt}                          |
  = f.text_field :prompt
  = delete_subfield_link(f)
- else
  %input{:type => :checkbox, :name => "field#{field.id}", |
         :value => field.prompt}                          |
    = field.prompt
