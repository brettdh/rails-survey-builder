- if @editing
  - field = f.object
%select{:name => "field#{field.id}"}
  - field.subfields.each do |subfield|
    %option{:value => subfield.prompt}= subfield.prompt
%br
- if @editing
  - f.fields_for :subfields do |subfield_form|
    = render_option_form(subfield_form, "combo")
  .addbox= add_subfield_link(field, "ComboOption")
  = new_child_fields_template(f, :subfields, "ComboOption",    |
                              {:field_supertype => "option"})  |

