!!! Strict
%html
  %head
    %title
      = h(yield(:title) || "Untitled")
    = javascript_include_tag 'jquery-1.3.2.min', 'application'
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'surveys'
    = yield(:head)
  %body
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      - if show_title?
        %h1= h yield(:title)
      = yield
